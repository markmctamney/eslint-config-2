{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
      "outDir": "build",
      "rootDir": "src",
      "baseUrl": "src",
      "module": "CommonJS",
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "declaration": true,
      "skipLibCheck": true,
      "strictNullChecks": true
  },

  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],

  "buildOptions": {
      "incremental": true
  }
}
