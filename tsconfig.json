{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
      "outDir": "build",
      "rootDir": "src",
      "baseUrl": "src",
      "module": "amd",
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "declaration": true,
      "skipLibCheck": true,
      "types": ["node"],
      "strictNullChecks": true
  },

  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],

  // "buildOptions": {
  //     "incremental": true
  // }
}
