{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
      "outDir": "build",
      "rootDir": "src",
      "baseUrl": "src",
      "module": "CommonJS",
      "target": "ES3",
      "lib": ["ESNext"],
      "moduleResolution": "node",
      "types": ["node"],
      "declaration": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "typeRoots": ["node_modules/@types"]
  },

  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],

  "buildOptions": {
      "incremental": true
  }
}
